Manager:
    Password:
    Menu:
    Language:
    File:
    Sentence:
    DataSet:

<Password>:
    name: 'Pass'
    Image:
        source: 'BG1.jpg'
    BoxLayout:
        orientation: 'vertical'
        spacing: 25
        padding: 25

        GridLayout:
            cols:1
            size: root.width, root.height
            Label:
                text: 'Welcome To TAnSy!'
                font_size:48

            Label:
                text: 'By Viplove Tyagi & Taha Zuberi'
                font_size:18

        GridLayout:
            cols:2

            Label:
                text: 'Enter Your Name: '
                font_size: 30

            TextInput:
                multiline: False
                id: name
                halign: 'center'
                valign: 'middle'
                multiline: 'true'
                font_size: 30

            Label:

                text: 'Enter Your Password: '
                font_size: 30

            TextInput:
                multiline: False
                id: passw
                halign: 'center'
                valign: 'middle'
                multiline: 'true'
                font_size: 30

        Button:
            size_hint:(1,.4)
            text: 'Submit'
            size_hint:(.4,.4)
            pos_hint: {'center_x':.5, 'center_y': .5}
            font_size: 30
            background_color: (157/255,157/255,167/255,1)
            on_release:
                root.check(name,passw)
                app.root.current= 'Language'
                app.root.transition.direction='left'

        Button:
            size_hint: (1,.4)
            text: 'Quit'
            size_hint:(.4,.4)
            pos_hint: {'center_x':.5, 'center_y': .5}
            background_color: (157/255,157/255,167/255,1)
            font_size: 30
            on_release: root.bye()

<Language>:
    name: 'Language'
    Image:
        source: 'BG1.jpg'
    BoxLayout:
        orientation: 'vertical'
        spacing: 25
        padding: 25

        GridLayout:
            cols:1
            size: root.width, root.height

            Label:
                text: 'Choose Your Language: -'
                font_size:36

        GridLayout:
            cols:2


        Button:
            size_hint:(1,.4)
            text: 'English'
            size_hint:(.4,.4)
            pos_hint: {'center_x':.5, 'center_y': .5}
            font_size: 30
            background_color: (157/255,157/255,167/255,1)
            on_release:
                language = "English"
                root.SetLanguage(language)
                app.root.current= 'Menu'
                app.root.transition.direction='left'

        Button:
            size_hint:(1,.4)
            text: 'German'
            size_hint:(.4,.4)
            pos_hint: {'center_x':.5, 'center_y': .5}
            font_size: 30
            background_color: (157/255,157/255,167/255,1)
            on_release:
                root.SetLanguage("German")
                app.root.current= 'Menu'
                app.root.transition.direction='left'

        Button:
            size_hint:(1,.4)
            text: 'Spanish'
            size_hint:(.4,.4)
            pos_hint: {'center_x':.5, 'center_y': .5}
            font_size: 30
            background_color: (157/255,157/255,167/255,1)
            on_release:
                root.SetLanguage("Spanish")
                app.root.current= 'Menu'
                app.root.transition.direction='left'

        Button:
            size_hint: (1,.4)
            text: 'Go Back'
            size_hint:(.4,.4)
            pos_hint: {'center_x':.5, 'center_y': .5}
            background_color: (157/255,157/255,167/255,1)
            font_size: 30
            on_release: 
                app.root.current= 'Pass'
                app.root.transition.direction='right'

