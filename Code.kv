<Sentence>:
    name: 'Sentence'
    Image:
        source: 'BG1.jpg'
    BoxLayout:
        orientation: 'vertical'
        size:root.width,root.height
        spacing: 25
        padding: 25

        GridLayout:
            cols:2
            size:root.width,root.height

            Label:
                text:'Enter The Sentence: '
                font_size:22
                size_hint: (.7,.7)

            TextInput:
                id: sentence
                valign: 'middle'
                halign: 'center'
                multiline: 'true'
                size_hint:(.4,.1)
                font_size: 16

        GridLayout:
            cols:3
            size:root.width,root.height

            Button:
                text: 'Go Back'
                size_hint: (.2,.2)
                font_size:22
                background_color: (157/255,157/255,167/255,1)
                on_release:
                    app.root.current='Menu'
                    root.manager.transition.direction= 'right'

            Button:
                text: 'Analyse'
                size_hint: (.2,.2)
                font_size:22
                background_color: (157/255,157/255,167/255,1)
                on_release: root.sentenceAnalysis()

            Button:
                text: 'Clear'
                size_hint: (.2,.2)
                font_size:22
                background_color: (157/255,157/255,167/255,1)
                on_release: root.clear()

        Label:
            id: analysis
            halign: 'center'
            valign: 'middle'
            multiline: 'true'
            font_size:22

